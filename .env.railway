# ðŸš‚ Railway Environment Variables per BrainBrawler Backend

# === GENERAL ===
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# === DATABASE ===
# Railway PostgreSQL - sarÃ  sostituito automaticamente
DATABASE_URL=${{Postgres.DATABASE_URL}}

# === REDIS ===
# Railway Redis - sarÃ  sostituito automaticamente  
REDIS_URL=${{Redis.REDIS_URL}}
REDIS_ENABLED=true

# === KAFKA ===
# Railway Kafka Service
KAFKA_ENABLED=true
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=brainbrawler-game-service
KAFKA_SSL=false
# KAFKA_USERNAME e KAFKA_PASSWORD non servono per setup interno Railway

# === AUTHENTICATION ===
JWT_SECRET=your_super_secure_jwt_secret_change_this_in_production
ADMIN_EMAIL=admin@yourdomain.com

# === EMAIL ===
# Disabilitato per deploy rapido
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# === GAME ENGINE ===
GAME_ENGINE_ENABLED=true
SOCKET_IO_ENABLED=true

# === MONITORING ===
LOG_LEVEL=info
